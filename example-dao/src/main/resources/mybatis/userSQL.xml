<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiebiao.example.dao.impl.UserDaoImpl">
	<sql id="condition">
		<where>
			<if test="userName != null">
				userName=#{userName} 
			</if>
			<if test="age !=0 ">
				AND age=#{age} 
			</if>
		</where>
	</sql>
	<select id="count" resultType="int">
	<![CDATA[
		select  count(*) as value  from user
	 ]]>
	</select>
	<select id="find" parameterType="string" resultType="User">
	<![CDATA[
    SELECT
     	 userId,
    	 userName,
     	 age
    FROM user
    WHERE userId = #{userId} 
    ]]>
	</select>
	<update id="update">
	<![CDATA[
		UPDATE user SET
		userName = #{userName},
		age = #{age}
		WHERE userId = #{userId}
		 ]]>
	</update>
	<insert id="insert">
		<![CDATA[
			INSERT INTO user (userName,age) 
			VALUES
			(#{userName},#{age})
		]]>
	</insert>
	<delete id="delete" parameterType="int">
		<![CDATA[
			DELETE FROM user
			WHERE
			userId=#{userId}	
		]]>
	</delete>
	<select id="listAll" parameterType="User"
		resultType="User">
		<![CDATA[
			SELECT * FROM user 
			]]>
		<include refid="condition" />	
		<![CDATA[
			 LIMIT #{start},#{end}
		]]>
	</select>
</mapper>